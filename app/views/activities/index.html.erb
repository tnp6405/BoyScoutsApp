<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Member</th>
      <th>Activity date</th>
      <th>Activity ampm</th>
      <th>Activity type</th>
      <th>Activity unit count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_id %></td>
        <td><%= activity.member %></td>
        <td><%= activity.activity_date %></td>
        <td><%= activity.activity_ampm %></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.activity_unit_count %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

